 <h2> New Wiki</h2>
 <div class= "row">
  <%= form_for @wiki do |f| %>
   <div class="col-md-12">
    <div class="form-group">
     <%= f.label :title %>
     <%= f.text_field :title %>
    </div>
    <div class="form-group">
     <%= f.label :body %>
     <%= f.text_area :body %>
     </div>
     <% if current_user.premium? || current_user.admin? %>
     <div class="form-group">
     <%= f.label :private, class: 'checkbox' %>
     <%= f.check_box :private %> Private wiki
    </div>
    <% end %>
    <div class="form-group">
     <%= f.submit "Save" %>
     </div>
   </div>
   <% end %>
 </div>